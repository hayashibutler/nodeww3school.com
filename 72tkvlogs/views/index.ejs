            <button type="submit" value="Submit">Dang nhap</button>
        </form>

        <script>
            $.ajax({
                type: "POST",
                url: '/loginjson',
                data: JSON.stringify({ firstName: "hoa", lastName: "mai"}),
                dataType: "json",
                contentType: "application/json"
            });
        </script>
    </body>
</html>